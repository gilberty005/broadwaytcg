# Database Configuration
# For Railway deployment, use DATABASE_URL (automatically provided)
# DATABASE_URL=postgresql://username:password@host:port/database

# For local development, use individual variables:
DB_USER=postgres
DB_HOST=localhost
DB_NAME=pokemon_collectr
DB_PASSWORD=your_password_here
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000

# External API Keys (optional)
# TCGPLAYER_API_KEY=your_tcgplayer_api_key_here
# EBAY_API_KEY=your_ebay_api_key_here

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 